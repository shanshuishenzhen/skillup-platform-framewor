# 监控服务配置示例
# 复制此文件为 .env.local 或 .env.production 并填入实际值

# ===========================================
# 通用监控配置
# ===========================================

# 监控服务提供商 (sentry|datadog|newrelic|custom)
MONITORING_PROVIDER=custom

# 是否启用监控 (true|false)
MONITORING_ENABLED=true

# 监控服务端点
MONITORING_ENDPOINT=https://api.monitoring.yourcompany.com/v1/events

# 监控服务 API 密钥
MONITORING_API_KEY=your-monitoring-api-key-here

# 监控仪表板 URL
MONITORING_DASHBOARD_URL=https://dashboard.monitoring.yourcompany.com

# 批量发送大小
MONITORING_BATCH_SIZE=10

# 刷新间隔（毫秒）
MONITORING_FLUSH_INTERVAL=5000

# 重试次数
MONITORING_RETRY_ATTEMPTS=3

# 超时时间（毫秒）
MONITORING_TIMEOUT=10000

# ===========================================
# Sentry 配置
# ===========================================

# Sentry DSN
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry 追踪采样率 (0.0-1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1

# Sentry 性能分析采样率 (0.0-1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Sentry 组织
SENTRY_ORG=your-sentry-org

# Sentry 项目
SENTRY_PROJECT=skillup-platform

# Sentry 认证令牌（用于上传 source maps）
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ===========================================
# DataDog 配置
# ===========================================

# DataDog API 密钥
DATADOG_API_KEY=your-datadog-api-key

# DataDog 应用密钥
DATADOG_APP_KEY=your-datadog-app-key

# DataDog 站点 (datadoghq.com|datadoghq.eu|us3.datadoghq.com|us5.datadoghq.com|ap1.datadoghq.com|ddog-gov.com)
DATADOG_SITE=datadoghq.com

# DataDog 日志级别 (debug|info|warn|error)
DATADOG_LOG_LEVEL=info

# ===========================================
# New Relic 配置
# ===========================================

# New Relic 许可证密钥
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# New Relic 应用名称
NEW_RELIC_APP_NAME=SkillUp Platform

# New Relic 日志级别 (trace|debug|info|warn|error|fatal)
NEW_RELIC_LOG_LEVEL=info

# ===========================================
# 自定义监控配置
# ===========================================

# 自定义监控服务的额外配置
CUSTOM_MONITORING_REGION=us-east-1
CUSTOM_MONITORING_TENANT=skillup
CUSTOM_MONITORING_ENCRYPTION_KEY=your-encryption-key

# ===========================================
# 告警配置
# ===========================================

# 是否启用告警
ALERTING_ENABLED=true

# 告警 Webhook URL
ALERTING_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# 告警邮件地址
ALERTING_EMAIL=alerts@yourcompany.com

# 错误率阈值（百分比）
ALERTING_ERROR_RATE_THRESHOLD=5

# 响应时间阈值（毫秒）
ALERTING_RESPONSE_TIME_THRESHOLD=2000

# ===========================================
# 性能监控配置
# ===========================================

# 是否启用性能监控
PERFORMANCE_MONITORING_ENABLED=true

# 性能数据采样率 (0.0-1.0)
PERFORMANCE_SAMPLING_RATE=0.1

# 是否监控数据库查询
DATABASE_MONITORING_ENABLED=true

# 是否监控外部 API 调用
EXTERNAL_API_MONITORING_ENABLED=true

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (debug|info|warn|error)
LOG_LEVEL=info

# 是否启用结构化日志
STRUCTURED_LOGGING_ENABLED=true

# 日志格式 (json|text)
LOG_FORMAT=json

# 是否发送日志到监控服务
LOG_TO_MONITORING=true

# ===========================================
# 开发环境配置
# ===========================================

# 开发环境监控端点（本地测试用）
DEV_MONITORING_ENDPOINT=http://localhost:8080/api/monitoring

# 开发环境 API 密钥
DEV_MONITORING_API_KEY=dev-api-key

# ===========================================
# 测试环境配置
# ===========================================

# 测试环境监控端点
TEST_MONITORING_ENDPOINT=http://localhost:8081/api/monitoring

# 测试环境 API 密钥
TEST_MONITORING_API_KEY=test-api-key

# ===========================================
# 生产环境配置示例
# ===========================================

# 生产环境监控端点
# PROD_MONITORING_ENDPOINT=https://api.monitoring.skillup.com/v1/events

# 生产环境 API 密钥
# PROD_MONITORING_API_KEY=prod-secure-api-key-here

# 生产环境仪表板
# PROD_MONITORING_DASHBOARD_URL=https://dashboard.monitoring.skillup.com

# ===========================================
# 安全配置
# ===========================================

# 监控数据加密密钥
MONITORING_ENCRYPTION_KEY=your-32-character-encryption-key

# 是否启用数据脱敏
DATA_MASKING_ENABLED=true

# 脱敏字段列表（逗号分隔）
MASKED_FIELDS=password,token,secret,key,authorization

# ===========================================
# 配置验证
# ===========================================

# 配置文件版本（用于验证配置完整性）
MONITORING_CONFIG_VERSION=1.0.0

# 最后更新时间
MONITORING_CONFIG_UPDATED=2024-01-01T00:00:00Z
