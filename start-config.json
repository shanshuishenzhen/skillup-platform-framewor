{
  "app": {
    "name": "SkillUp Platform",
    "version": "1.0.0",
    "description": "智能在线学习平台"
  },
  "server": {
    "defaultPort": 3000,
    "host": "localhost",
    "startupTimeout": 30000,
    "checkInterval": 1000,
    "maxRetries": 5,
    "autoOpenBrowser": true
  },
  "database": {
    "type": "sqlite",
    "path": "./data/skillup.db",
    "autoInit": true,
    "seedData": true
  },
  "features": {
    "hotReload": true,
    "typescript": true,
    "tailwindcss": true,
    "eslint": true
  },
  "environment": {
    "NODE_ENV": "development",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "logging": {
    "level": "info",
    "colorOutput": true,
    "showTimestamp": true
  },
  "checks": {
    "nodeVersion": ">=18.0.0",
    "npmVersion": ">=8.0.0",
    "requiredFiles": [
      "package.json",
      "next.config.ts",
      "tailwind.config.ts"
    ],
    "requiredDependencies": [
      "next",
      "react",
      "react-dom",
      "tailwindcss"
    ]
  }
}
