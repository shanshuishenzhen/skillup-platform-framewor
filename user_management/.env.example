# 用户管理系统环境变量配置模板
# 复制此文件为 .env 并填入实际值

# 数据库配置
DATABASE_PATH=user_management.db

# JWT 配置 (生产环境必须更改)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# 超级管理员配置 (生产环境必须更改)
SUPER_ADMIN_PHONE=13800000000
SUPER_ADMIN_PASSWORD=admin123456

# 短信服务配置
SMS_CODE_EXPIRY_SECONDS=300
SMS_RATE_LIMIT_SECONDS=60

# 密码重置配置
PASSWORD_RESET_CODE_EXPIRY_MINUTES=10
PASSWORD_RESET_RATE_LIMIT_SECONDS=60

# 安全配置
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
JWT_BLACKLIST_CLEANUP_DAYS=30

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/user_management.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 应用配置
APP_NAME=SkillUp用户管理系统
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# 文件上传配置
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.xlsx,.xls,.csv
UPLOAD_TEMP_DIR=temp/uploads

# 数据导入配置
MAX_IMPORT_BATCH_SIZE=1000
IMPORT_VALIDATION_STRICT=True

# 外部服务配置 (可选)
# SMS_API_KEY=your-sms-api-key
# SMS_API_URL=https://api.sms-provider.com
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@example.com
# EMAIL_PASSWORD=your-email-password